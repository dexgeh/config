[user]
    email = milky@archmini
    name = milky

[format]
    pretty = %Creset%Cblue%cr\t%C(cyan bold)%an%Creset\t%C(yellow)%h%Creset %s%C(magenta)%d%Creset

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX -x15,33
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[push]
    default = upstream

[alias]
    lol = log --graph
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    df = diff --color-words
    unstage = reset HEAD

[branch "master"]
    rebase = true
[http]
	sslVerify = false
