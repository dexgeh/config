#!/bin/dash
cd $HOME
(
  find . -mindepth 1 -maxdepth 1 -name .\* -type d \
    -not -name .config \
    -and -not -name .cache \
    -and -not -name .local -print0
  find ./.config -mindepth 1 -maxdepth 1 -type d -print0
  find ./.cache -mindepth 1 -maxdepth 1 -type d -print0
  find ./.local/share -mindepth 1 -maxdepth 1 -type d -print0
) | xargs -0 du -hs | sort -h
